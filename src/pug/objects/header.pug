header(:class="['header', {'show': position === 4}]")
  .container
    .header__content
      canvas#canvas
      .header__name
        .name {{ name === '' ? 'Dear Friend' : name }}
          span ,
        h1.title Merry Christmas
          span !
      .share
        a.link(href="//twitter.com/share" target="_blank" title="Share on Twitter")
          span.twitter-icon
        a.link(href="//facebook.com/share" target="_blank" title="Share on Facebook")
          span.facebook-icon
        a.link(href="//linkedin.com/share" target="_blank" title="Share on LinkedIn")
          span.linked-in-icon
      .arrow-down
        a(href="#" @click.prevent='scroll')
          img(src="../img/arrow-down.png" alt="arrow-down")

